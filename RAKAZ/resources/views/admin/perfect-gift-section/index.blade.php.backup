<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
$(document).ready(function() {
    // Initialize Select2
    $('#product-select').select2({
        ajax: {
            url: '{{ route('admin.perfect-gift-section.products') }}',
            dataType: 'json',
            delay: 300,
            data: function (params) {
                return {
                    q: params.term || ''
                };
            },
            processResults: function (data) {
                return {
                    results: data
                };
            },
            cache: true
        },
        placeholder: 'ابحث عن منتج باسمه أو رقمه...',
        minimumInputLength: 1,
        language: {
            inputTooShort: function() {
                return 'اكتب حرف واحد على الأقل للبحث';
            },
            searching: function() {
                return 'جاري البحث...';
            },
            noResults: function() {
                return 'لا توجد نتائج';
            }
        },
        templateResult: formatProduct,
        templateSelection: formatProductSelection
    });

    // Add product on select
    $('#product-select').on('select2:select', function (e) {
        var data = e.params.data;
        addProduct(data.id, data.text, data.image);
        $(this).val(null).trigger('change');
    });

    // Initialize Sortable
    const el = document.getElementById('selected-products');
    if (el) {
        Sortable.create(el, {
            animation: 150,
            handle: '.drag-handle',
            ghostClass: 'sortable-ghost',
            chosenClass: 'sortable-chosen',
            onEnd: function() {
                updateProductCount();
            }
        });
    }
    
    updateProductCount();
});

function formatProduct(product) {
    if (!product.id) return product.text;
    
    var $product = $(
        '<div class="d-flex align-items-center p-2">' +
            (product.image ? '<img src="' + product.image + '" style="width: 50px; height: 50px; object-fit: cover; border-radius: 6px; margin-left: 12px;">' : '<div style="width: 50px; height: 50px; background: #f0f0f0; border-radius: 6px; margin-left: 12px; display: flex; align-items: center; justify-content: center;"><i class="fas fa-image text-muted"></i></div>') +
            '<span style="font-weight: 500;">' + product.text + '</span>' +
        '</div>'
    );
    return $product;
}

function formatProductSelection(product) {
    return product.text;
}

function addProduct(id, name, image) {
    // Check if already exists
    if ($('#selected-products').find('[data-product-id="' + id + '"]').length > 0) {
        alert('هذا المنتج موجود بالفعل!');
        return;
    }
    
    // Remove empty state if exists
    $('#selected-products .empty-state').remove();
    
    var imageHtml = image ? 
        '<img src="' + image + '" alt="' + name + '">' : 
        '<img src="/assets/images/placeholder.jpg" alt="No Image">';
    
    var productHtml = `
        <div class="product-item" data-product-id="${id}">
            <span class="drag-handle">
                <i class="fas fa-grip-vertical"></i>
            </span>
            <input type="hidden" name="product_ids[]" value="${id}">
            ${imageHtml}
            <div class="product-info">
                <div class="product-name">${name}</div>
                <span class="product-id">ID: ${id}</span>
            </div>
            <button type="button" class="remove-btn" onclick="removeProduct(this)">
                <i class="fas fa-times me-1"></i> إزالة
            </button>
        </div>
    `;
    
    $('#selected-products').append(productHtml);
    updateProductCount();
}

function removeProduct(btn) {
    $(btn).closest('.product-item').fadeOut(300, function() {
        $(this).remove();
        updateProductCount();
        
        // Add empty state if no products
        if ($('#selected-products .product-item').length === 0) {
            $('#selected-products').html(`
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <p>لا توجد منتجات مضافة بعد</p>
                    <small>استخدم البحث أعلاه لإضافة منتجات</small>
                </div>
            `);
        }
    });
}

function updateProductCount() {
    var count = $('#selected-products .product-item').length;
    $('#product-count').text(count);
}
</script>
@endpush
